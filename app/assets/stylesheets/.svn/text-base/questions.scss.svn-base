.submenu {
  
  background: rgb(240,240,240);
  height: 40px;
  
  border-top-left-radius: 8px;
  -webkit-border-top-left-radius: 8px;
  -moz-border-top-left-radius: 8px;
  
  border-top-right-radius: 8px;
  -webkit-border-top-right-radius: 8px;
  -moz-border-top-right-radius: 8px;
  
  border-bottom: 1px solid rgb(235,235,235);
  h4 {
    font-size:14px;
    margin-left: 12px;
  }
  
}

.subnav {
  text-align:right;
  height: 40px;
  line-height: 40px;
  margin-right: 12px;
  ul { margin:0; padding:0;}
  li {
    display:inline;
    margin: 0 5px;
    
  }
  li.active {
    a {
      color: #333;
      border-bottom: 1px dotted #ddd;
      &:hover { text-decoration: none; }
    }
  }

}

.questions {
  
  .question-line {
    padding: 6px 12px;
    border-bottom: 1px solid #ddd;
    &:last-child{
      border:none;
    }
  }
  
  .question {
   
    .infos { padding-right:74px; }
    .right-info { padding-left:56px;}
    .title { font-size:14px; margin-top:2px; margin-bottom:6px; }
    .info {
      color:#bbb; margin-bottom:2px;
      font-size:12px;
      a {
        color: #bbb;
      }
      .node {
        padding: 1px 5px;
        color: #778087;
        text-decoration: none;
        background-color: #ddd;
      }
      em { font-style:normal; }
    }
    
    .answers {
       width:70px; margin-right:10px; text-align:right; vertical-align:middle;
       a.count,a.count:visited { line-height: 12px; font-weight: bold; color: white;
         background-color: #1c7fdb; display: inline-block;
         padding: 2px 10px 2px 10px;
         -moz-border-radius: 80px; -webkit-border-radius: 80px; border-radius: 80px;
         margin: 18px 12px 0px 0px; text-decoration: none;
       }
       a.count:hover { color:write; background:#1dc115; }
       a.state_true:link,a.state_true:visited { background:#DDD; }
       a.state_true:hover { background:#aaa;}
    }
    
    .body {
      margin-bottom:10px; margin-top:8px;
      img { max-width:690px;}
    }
  }
  
}

#question_show {
  padding: 6px 12px;
  h1 { font-size:22px; color:#333;text-align: left; line-height:100%; margin-bottom:8px; }
  .infos {
    position:relative;
    margin-bottom:10px;
    margin-right:56px;
    border-bottom:1px solid #ddd;
    margin:0 -10px;
    padding:0 10px 5px 10px;
  }
  .avatar_large { width:48px; }
}

.no_result { margin-bottom:20px; margin-top: 20px; text-align:center; }

#answers {
  padding: 6px 12px;
  margin-top: 20px;
  .total { padding:0 10px 6px 10px; border-bottom:1px solid #DDD; color:#999; margin:0 -10px; }
  .pagination { padding:8px 10px 0 10px; margin:0 -10px; }
  .answer {
    border-bottom:1px solid #DDD; padding:8px 10px 16px 10px; margin:0 -10px;
    background:#FFF;
    .deleted {
      color:#aaa;
      text-decoration: line-through;
      font-size:12px; text-align:center;
    }
    &.light { background:#F7F2FC; }
    &.popular { background:#fffce9; }
    .face { padding-right:8px; width:48px; margin-left:0; }
    .infos { padding-left:58px; }
    .info {
      font-size:12px;
      color:#bbb; height:20px;
      a:link,
      a:visited { color:#999; }
      .name {
        float:left;
        a { text-decoration:underline; margin-right:8px; }
      }
      .opts {
        float:right; text-align:right;
        a { margin-left:5px; }
        a:hover { text-decoration:none; }
        i.icon { margin-bottom:-1px; }
      }
      a.edit { display:none; }
      a.reply_link img { vertical-align:middle;}
    }
    .body {
      img { max-width:622px;}
    }
  }
}

#answer {
  margin-top:20px;
  padding: 10px;
}
