<div class="row-fluid">
  <div class="span9 well">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-horizontal" }) do |f| %>
      <%= render "shared/error_messages", :target => resource %>
      <fieldset>
        <legend>忘记了密码</legend>
        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true, :hint => "此功能将会发送一个找回密码的特别链接到你的邮箱，通过改链接可以进入重置密码的页面。", class:"span10" %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "找回密码", :class => "btn btn-primary", :disable_with => t('common.submitting') %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="span3 well">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
