<div class="row">
  <div class="span4 offset4 well">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-full-width' }) do |f| %>
      <fieldset>
        <legend><%= t('label.sign_in') %></legend>
        <%= render_flashes %>
        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

        <div><%= f.label :password, t('label.password_with_forget_link_html', :url => new_password_path(resource_name)) %><br />
        <%= f.password_field :password %></div>
        
        <div class="control-group">
          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div><%= f.submit t('label.sign_in'), class: "btn btn-info" %></div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>