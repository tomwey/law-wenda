<%= simple_form_for [:cpanel, @node] do |f| %>

	<%= render 'shared/error_messages', :target => @node %>
	
	<%= f.input :name %>
	<%= f.input :summary, as: :text, :input_html => { :class => "span6", :style => "height: 200px" } %>
	<%= f.input :sort %>
	<%= f.label :section_id, "分类" %>
	<%= f.select :section_id, Section.all.map { |s| [s.name, s.id] } %>
	
	<br />
	<%= f.submit "保存", :class => "btn btn-primary", :disable_with => t("common.submitting") %>
<% end %>