<% cache([answer]) do %>
<div class="answer">
  <div class="pull-left face"><%= user_avatar_tag(answer.user, :normal) %></div>
  <div class="infos">
    <div class="info">
      <span class="name"><%= user_name_tag(answer.user) %></span>
      <span class="time">
        <%= raw t("common.reply_at", :time => timeago(answer.created_at)) %>
        <% if owner?(answer) %>
          <%= link_to("", edit_question_answer_path(@question,answer), :class => "icon small_edit", :title => "修改回帖")%>
        <% end %>
        <%= link_to("", "#",
            'data-floor' => answer_counter + 1, 'data-login' => answer.user_login,
            :title => '回复此楼', :class => "icon small_reply" )
        %>
      </span>
    </div>
    <div class="body">
      <%= answer.body %>
    </div>
  </div>
</div>

<% end %>